<Project Sdk="Godot.NET.Sdk/4.4.1">
	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<EnableDynamicLoading>true</EnableDynamicLoading>
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>
		<RootNamespace>Stranne.EcsMemory.GodotGame</RootNamespace>
		<!-- Catch compiler-mismatch issues with the Introspection generator as early as possible -->
		<WarningsAsErrors>CS9057</WarningsAsErrors>
		<!-- Required for some nuget packages to work -->
		<!-- godotengine/godot/issues/42271#issuecomment-751423827 -->
		<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
		<!-- To show generated files -->
		<!-- <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles> -->
		<!--
      <CompilerGeneratedFilesOutputPath>.generated</CompilerGeneratedFilesOutputPath>
    -->
		<DebugType>portable</DebugType>
		<DebugSymbols>true</DebugSymbols>
		<Title>Stranne.EcsMemory</Title>
		<Version>1.0.0</Version>
		<Description>Stranne.EcsMemory</Description>
		<Copyright>Â© 2024 Olof Stranne</Copyright>
		<Authors>Olof Stranne</Authors>
		<Company>Olof Stranne</Company>

		<SkipTests Condition="'$(SKIP_TESTS)' != ''">true</SkipTests>
		<RunTests>false</RunTests>
	</PropertyGroup>

	<PropertyGroup Condition="&#xA;        ('$(Configuration)' == 'Debug' or '$(Configuration)' == 'ExportDebug')&#xA;        and '$(SkipTests)' != 'true' ">
		<RunTests>true</RunTests>
		<DefineConstants>$(DefineConstants);RUN_TESTS</DefineConstants>
	</PropertyGroup>

	<ItemGroup Condition="'$(RunTests)' == 'true'">
		<!-- Test dependencies go here! -->
		<!-- Dependencies added here will not be included in release builds. -->
		<PackageReference Include="Chickensoft.GoDotTest" Version="1.6.7" />
		<!-- Used to drive test scenes when testing visual code -->
		<PackageReference Include="Chickensoft.GodotTestDriver" Version="3.1.1" />
		<!-- Bring your own assertion library for tests! -->
		<!-- We're using Shouldly for this example, but you can use anything. -->
		<PackageReference Include="Shouldly" Version="4.3.0" />
		<!-- LightMock is a mocking library that works without reflection. -->
		<PackageReference Include="LightMock.Generator" Version="1.2.2" />
		<!-- LightMoq is a Chickensoft package which makes it more like Moq. -->
		<PackageReference Include="LightMoq" Version="0.1.0" />
	</ItemGroup>

	<ItemGroup>
		<!-- Production dependencies go here! -->
		<PackageReference Include="Chickensoft.GameTools" Version="2.0.8" />
	</ItemGroup>

	<ItemGroup Condition="'$(RunTests)' != 'true'">
		<Compile Remove="test/**/*.cs" />
		<None Remove="test/**/*" />
		<EmbeddedResource Remove="test/**/*" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Stranne.EcsMemory.GodotAdapter\Stranne.EcsMemory.GodotAdapter.csproj" />
	</ItemGroup>

	<ItemGroup>
		<!-- Ensure .tscn files are included in projects -->
		<None Include="**\*.tscn" />

		<!-- Nest each .tscn under a .cs with the same base name in the same folder -->
		<None Update="**\*.tscn">
			<DependentUpon>%(Filename).cs</DependentUpon>
			<Visible>true</Visible>
		</None>
	</ItemGroup>
</Project>
